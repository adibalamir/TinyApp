<div style="color:blue;font-size:40px;text-align:center;margin-top: 20px;">
  TinyApp
</div>

<h2>Login:</h2>
<% if (!username) { %>
  <form action="/login" method="POST" style="margin-bottom: 20px;">
    <input type="text" name="username">
    <input type="submit" value="Submit">
  </form>
<% }else{ %>
  <form action="/logout" method="POST" style="margin-bottom: 20px;">
    <%= username %>
    <input type="submit" value="Logout">
  </form>
<% } %>
