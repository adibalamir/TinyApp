<!DOCTYPE html>
<html lang = "en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
  <title>TinyApp</title>
</head>
<body>
  <a href="/urls">Back to URLS</a>
  <div style="color:blue;font-size:40px;text-align:center;margin-top: 20px;">TinyApp</div>
  <% include ./partials/_header.ejs %>
  <table>
    <thead>
      <tr>
        <th>LongURL</th>
        <th></th>
        <th>ShortURL</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= longURL %></td>
        <td>: </td>
        <td><%= shortURL %></td>
      </tr>
      <tr>
        <td style="padding: 20px">
          <form action="/urls/<%= shortURL %>/edit" method="POST">
            <input type="text" name="longURL" placeholder="http://Enter a 'long' URL">
            <input type="submit" value="Update">
          </form>
        </td>
      </tr>
    </tbody>
  </table>
</body>
</html>

