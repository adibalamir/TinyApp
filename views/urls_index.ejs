<!DOCTYPE html>
<html lang = "en">
<head>
  <title>TinyApp</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
</head>
<body>
  <div style="color:blue;font-size:40px;text-align:center;margin-top: 20px;">TinyApp</div>
  <% include ./partials/_header.ejs %>
  <table>
    <thead>
      <tr>
        <th>ShortURL</th>
        <th>LongURL</th>
      </tr>
    </thead>
    <tbody>
      <% for (item in urls) { %>
      <tr>
        <td><%= item %></td>
        <td><%= urls[item] %></td>
        <td>
        <a href="/urls/<%= item %>">Edit</a>
        </td>
        <td>
          <form action="/urls/<%= item %>/delete" method="POST">
            <input type="submit" value="Delete" class="btn btn-primary"/>
          </form>
        </td>
      </tr>
      <% } %>
      <tr>
        <td colSpan="2">
          <a href="/urls/new">New URL</a>
        </td>
      </tr>
    </tbody>
  </table>
</body>
</html>