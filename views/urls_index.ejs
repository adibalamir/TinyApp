<!DOCTYPE html>
<html lang = "en">
<head>
  <% include ./partials/head.ejs %>
</head>
<body>
  <div style="color:blue;font-size:40px; margin-bottom: 20px; text-align: center;">TinyApp</div>
  <% include ./partials/_header.ejs %>
<div class="container = fluid">
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">LongURL</th>
        <th scope="col" colspan="3">ShortURL</th>
      </tr>
    </thead>
    <tbody>
    <% for (item in urls) { %>
      <tr>
        <td><%= urls[item].longURL %></td>
        <td><a href="/u/<%= item %>"><%= item %></td></a>
        <td>
        <a href="/urls/<%= item %>">Edit</a>
        </td>
        <td>
          <form action="/urls/<%= item %>/delete" method="POST">
            <input type="submit" value="Delete" class="btn btn-primary"/>
          </form>
        </td>
      </tr>
    <% } %>
      <tr>
        <td colspan="4">
          <a href="/urls/new">New URL</a>
        </td>
      </tr>
    </tbody>
  </table>
</div>
</body>
</html>